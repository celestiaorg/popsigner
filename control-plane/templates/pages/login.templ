package pages

import (
	"github.com/Bidon15/banhbaoring/control-plane/templates/components"
	"github.com/Bidon15/banhbaoring/control-plane/templates/layouts"
)

// LoginPage renders the login page with OAuth and email/password options.
templ LoginPage(errorMsg string) {
	@layouts.Auth("Login") {
		<!-- Error message -->
		if errorMsg != "" {
			<div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 rounded-xl flex items-center gap-3">
				<span class="text-red-400 text-lg">âš </span>
				<p class="text-red-400 text-sm">{ errorMsg }</p>
			</div>
		}
		
		<h2 class="text-2xl font-heading font-bold text-bao-text mb-2">Welcome back</h2>
		<p class="text-bao-muted text-sm mb-6">Sign in to continue to your dashboard</p>
		
		<!-- OAuth Buttons -->
		<div class="space-y-3 mb-6">
			@OAuthButton("github", "Continue with GitHub")
			@OAuthButton("google", "Continue with Google")
			@OAuthButton("discord", "Continue with Discord")
		</div>
		
		<!-- Divider -->
		<div class="relative my-6">
			<div class="absolute inset-0 flex items-center">
				<div class="w-full border-t border-bao-border"></div>
			</div>
			<div class="relative flex justify-center text-sm">
				<span class="px-4 bg-bao-card text-bao-muted">or continue with email</span>
			</div>
		</div>
		
		<!-- Email/Password Form -->
		<form action="/login" method="POST" class="space-y-4">
			<div>
				<label for="email" class="block text-sm font-medium text-bao-text mb-1.5">Email</label>
				<input 
					type="email" 
					id="email" 
					name="email" 
					required
					autocomplete="email"
					class="w-full px-4 py-3 bg-bao-bg border border-bao-border rounded-xl text-bao-text placeholder-bao-muted focus:border-bao-accent focus:ring-1 focus:ring-bao-accent focus:outline-none transition-colors"
					placeholder="you@example.com"
				/>
			</div>
			
			<div>
				<div class="flex items-center justify-between mb-1.5">
					<label for="password" class="block text-sm font-medium text-bao-text">Password</label>
					<a href="/forgot-password" class="text-xs text-bao-accent hover:text-amber-300 transition-colors">
						Forgot password?
					</a>
				</div>
				<input 
					type="password" 
					id="password" 
					name="password" 
					required
					autocomplete="current-password"
					class="w-full px-4 py-3 bg-bao-bg border border-bao-border rounded-xl text-bao-text placeholder-bao-muted focus:border-bao-accent focus:ring-1 focus:ring-bao-accent focus:outline-none transition-colors"
					placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
				/>
			</div>
			
			<div class="pt-2">
				@components.Button(components.ButtonPrimary, components.ButtonSizeLarge, false) {
					<span class="w-full text-center">Sign In</span>
				}
			</div>
		</form>
		
		<p class="mt-6 text-center text-sm text-bao-muted">
			Don't have an account?
			<a href="/signup" class="text-bao-accent hover:text-amber-300 font-medium transition-colors">
				Sign up free
			</a>
		</p>
	}
}

// OAuthButton renders an OAuth provider button.
templ OAuthButton(provider, label string) {
	<a 
		href={ templ.SafeURL("/auth/" + provider) }
		class={ oauthButtonClasses(provider) }
	>
		@OAuthIcon(provider)
		<span class="font-medium">{ label }</span>
	</a>
}

func oauthButtonClasses(provider string) string {
	base := "flex items-center justify-center gap-3 w-full px-4 py-3 rounded-xl font-medium transition-all duration-200 hover:scale-[1.01] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-bao-bg"
	
	switch provider {
	case "github":
		return base + " bg-[#24292e] text-white hover:bg-[#2f363d] focus:ring-[#24292e]"
	case "google":
		return base + " bg-white text-gray-900 hover:bg-gray-100 focus:ring-gray-300"
	case "discord":
		return base + " bg-[#5865F2] text-white hover:bg-[#4752C4] focus:ring-[#5865F2]"
	default:
		return base + " bg-bao-border text-bao-text hover:bg-bao-card focus:ring-bao-accent"
	}
}

