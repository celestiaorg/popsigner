package pages

import (
	"github.com/Bidon15/banhbaoring/control-plane/templates/layouts"
)

// LoginPage renders the login page with OAuth options - 80s CRT terminal aesthetic
templ LoginPage(errorMsg string) {
	@layouts.Auth("Login") {
		<!-- Error message -->
		if errorMsg != "" {
			<div class="mb-6 p-4 bg-[#FF3333]/10 border border-[#FF3333]/50 flex items-center gap-3">
				<span class="text-[#FF3333] text-lg">âš </span>
				<p class="text-[#FF3333] text-sm uppercase">{ errorMsg }</p>
			</div>
		}
		
		<h2 class="text-xl text-[#FFB000] mb-2 uppercase drop-shadow-[0_0_10px_#FFB000]">&gt; LOGIN_</h2>
		<p class="text-[#666600] text-sm mb-8 uppercase">AUTHENTICATE WITH YOUR PROVIDER</p>
		
		<!-- OAuth Buttons -->
		<div class="space-y-3">
			@OAuthButton("github", "CONTINUE WITH GITHUB")
			@OAuthButton("google", "CONTINUE WITH GOOGLE")
		</div>
		
		<p class="mt-8 text-center text-sm text-[#666600] uppercase">
			NO ACCOUNT?
			<a href="/signup" class="text-[#FFB000] hover:drop-shadow-[0_0_8px_#FFB000] font-medium transition-all">
				DEPLOY NOW
			</a>
		</p>
		
		<p class="mt-4 text-center text-xs text-[#666600] uppercase">
			BY SIGNING IN, YOU AGREE TO OUR 
			<a href="/terms" class="text-[#FFB000] hover:underline">TERMS</a> AND 
			<a href="/privacy" class="text-[#FFB000] hover:underline">PRIVACY POLICY</a>
		</p>
	}
}

// OAuthButton renders an OAuth provider button - terminal style
templ OAuthButton(provider, label string) {
	<a 
		href={ templ.SafeURL("/auth/" + provider) }
		class={ oauthButtonClasses(provider) }
	>
		@OAuthIcon(provider)
		<span class="font-medium uppercase">{ label }</span>
	</a>
}

func oauthButtonClasses(provider string) string {
	base := "flex items-center justify-center gap-3 w-full px-4 py-3 font-mono transition-all duration-200 hover:drop-shadow-[0_0_10px_currentColor]"
	
	switch provider {
	case "github":
		return base + " bg-black border border-[#33FF00] text-[#33FF00] hover:bg-[#0D1A0D]"
	case "google":
		return base + " bg-black border border-[#FFB000] text-[#FFB000] hover:bg-[#1A1A00]"
	default:
		return base + " bg-black border border-[#33FF00] text-[#33FF00] hover:bg-[#0D1A0D]"
	}
}

